<Window x:Class="OptimizatonMethods.Chart2DWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OptimizatonMethods"
        xmlns:chartDirector="clr-namespace:ChartDirector;assembly=ChartDirector.Net.Desktop.Controls"
        mc:Ignorable="d"
        Title="Chart2DWindow" Loaded="Chart2DWindow_OnLoaded" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <chartDirector:WPFChartViewer x:Name="WPFChartViewer1" Width="575" Height="525" Margin="8,8,0,0" Grid.Row="0" Grid.Column="0" 
                                      MouseMovePlotArea="WPFChartViewer1_MouseMovePlotArea" />
        <chartDirector:WPFChartViewer x:Name="crossSectionViewerX" Width="100" Height="525" Margin="8,8,8,0" Grid.Row="0" Grid.Column="1" />
        <chartDirector:WPFChartViewer x:Name="crossSectionViewerY" Width="575" Height="100" Margin="8,8,0,8" Grid.Row="1" Grid.Column="0" />
    </Grid>
</Window>
